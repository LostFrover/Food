<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudgray"
    tools:context="ir.mhkz.loginandsignup.HealthData">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/buttonoutline"
        android:baselineAligned="false"
        android:gravity="start|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cardview_shadow_end_color"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="健康档案"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadowoutline"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:outlineProvider="background"
            android:translationZ="3dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:gravity="center">

                <TableRow
                    android:id="@+id/RowUserNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/userTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户编号:"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="空"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/RowUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/userTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="空"
                        android:textColor="@color/textcolor"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/RowAge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="2"
                        android:inputType="number"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:id="@+id/RowHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/HeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:hint="(cm)"
                        android:inputType="numberDecimal"
                        android:text="0.00"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="55dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/sexTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别："
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:inputType="textPersonName"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TableRow
                    android:id="@+id/RowBtW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/WeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:hint="(kg)"
                        android:inputType="number|numberDecimal"
                        android:text="0.00"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView

                        android:id="@+id/BeatTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="脉搏/心率："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText

                        android:id="@+id/Beat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:hint="(次/min)"
                        android:inputType="number"
                        android:text="0"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TableRow
                    android:id="@+id/RowBsWl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/BodyFatTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体脂："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/BodyFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:hint="(%)"
                        android:inputType="number|numberDecimal"
                        android:text="0"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="55dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/WaistlineTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="腰围："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Waistline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:hint="(cm)"
                        android:inputType="number|numberDecimal"
                        android:text="0.00"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TableRow
                    android:id="@+id/RowBsBf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/BloodFatTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血脂："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/BloodFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:hint="(mmol/L)"
                        android:inputType="number|numberDecimal"
                        android:text="0.00"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="55dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/BloodSugarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血糖："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/BloodSugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:ems="3"
                        android:hint="(mmol/L)"
                        android:inputType="number|numberDecimal"
                        android:text="0.00"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />
                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/targetWeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="目标体重:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/targetWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@drawable/outline"
                        android:ems="4"
                        android:inputType="numberDecimal"
                        android:textColor="@color/textcolor" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <LinearLayout
                    android:id="@+id/RowAdvice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adviceTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="饮食建议"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/advice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无建议"
                        android:textColor="#555555"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Space
                    android:layout_width="110dp"
                    android:layout_height="75dp" />

                <Button
                    android:id="@+id/change"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:background="@color/yellowhead"
                    android:text="修改"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/RowAdvice" />

                <Space
                    android:layout_width="110dp"
                    android:layout_height="75dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
